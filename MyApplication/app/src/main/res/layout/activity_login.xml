<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backblue">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="337dp"
        android:layout_height="41dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        tools:layout_editor_absoluteY="533dp"
        app:layout_constraintRight_toRightOf="@+id/needaccount"
        app:layout_constraintLeft_toLeftOf="@+id/needaccount" />

    <TextView
        android:text="Support system for school bus"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/white"
        tools:textColor="@color/white"
        tools:textStyle="bold"
        android:textStyle="bold"
        android:textSize="36sp"
        app:layout_constraintRight_toRightOf="@+id/email"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="352dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="@color/colorAccent"
        android:id="@+id/email"
        android:ellipsize="middle"
        android:hint="Email"
        android:layout_height="22dp"
        tools:layout_editor_absoluteY="336dp"
        app:layout_constraintRight_toRightOf="@+id/editText2"
        app:layout_constraintLeft_toLeftOf="@+id/editText2" />

    <EditText
        android:layout_width="352dp"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="Password"
        android:layout_height="22dp"
        tools:layout_editor_absoluteY="366dp"
        app:layout_constraintRight_toRightOf="@+id/password"
        app:layout_constraintLeft_toLeftOf="@+id/password" />

    <Button
        android:text="LOGIN"
        android:layout_width="352dp"
        android:layout_height="48dp"
        android:id="@+id/password"
        tools:layout_editor_absoluteY="478dp"
        app:layout_constraintRight_toRightOf="@+id/login_button"
        app:layout_constraintLeft_toLeftOf="@+id/login_button" />

    <TextView
        android:text="NEED AN ACCOUNT?"
        android:layout_height="wrap_content"
        android:id="@+id/needaccount"
        android:layout_width="352dp"
        android:gravity="center"
        android:textColor="@color/com_facebook_button_border_color_focused"
        tools:layout_editor_absoluteY="654dp"
        app:layout_constraintRight_toRightOf="@+id/signup"
        app:layout_constraintLeft_toLeftOf="@+id/signup" />

    <Button
        android:text="Sign Up Now"
        android:layout_height="48dp"
        android:id="@+id/signup"
        android:layout_width="200dp"
        tools:layout_editor_absoluteY="750dp"
        tools:layout_editor_absoluteX="200dp" />


</android.support.constraint.ConstraintLayout>